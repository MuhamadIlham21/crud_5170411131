<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/tvKodePopup"
            android:text="@string/kode_fakultas_"
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/txtKodePopup"
            android:layout_width="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/tvKodePopup"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvNamaPopup"
            android:text="@string/nama_fakultas"
            android:layout_below="@+id/tvKodePopup"
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/txtNamaFakultasPopup"
            android:layout_width="180dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tvKodePopup"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:layout_toEndOf="@id/tvKodePopup"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvID_popup"
            android:text="@string/id_item"
            android:layout_below="@+id/tvKodePopup"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"/>

</RelativeLayout>